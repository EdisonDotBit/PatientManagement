@model EL.PatientEntity
@{
    ViewBag.Title = "Create Patient Record";
    Layout = "~/Views/Shared/MainLayout.cshtml";
}

<div class="container mt-4">
    <h2>Create Patient Record</h2>

    @using (Html.BeginForm("", "", FormMethod.Post, new { id = "patientForm" }))
    {
        @Html.Partial("Partial/_PatientForm", Model)

        <div class="mt-2">
            <button type="button" class="btn btn-primary" id="btnSave" title="Save Record">Save</button>
            <button type="button" class="btn btn-warning" id="btnClear" title="Clear Inputs">Clear All</button>
            <a href="@Url.Action("Index", "Patient")" class="btn btn-secondary" title="Cancel Process">Cancel</a>
        </div>
    }
</div>

@section Scripts {
    <script src="~/Scripts/jquery-3.7.0.min.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script>
        var checkDuplicateUrl = '@Url.Action("CheckDuplicate", "Patient")';
        var createPatientUrl = '@Url.Action("Create", "Patient")';
        var indexPatientUrl = '@Url.Action("Index", "Patient")';
    </script>
    <script src="~/Content/JS/Shared/Utils.js"></script>
    <script src="~/Content/JS/PatientValidateCreateForm.js"></script>
}

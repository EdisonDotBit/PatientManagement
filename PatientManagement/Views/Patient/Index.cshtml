@model List<EL.PatientEntity>

@{
    ViewBag.Title = "Patient Details";
    Layout = "~/Views/Shared/MainLayout.cshtml";
}

<div class="container mt-4">
    <h2 class="mb-3">Patient Details</h2>

    <!-- Create button -->
    <a href="@Url.Action("Create", "Patient")" class="btn btn-primary mb-3" title="Add Record">Add New Record</a>

    <!-- Search Filters -->
    <div class="card mb-3 p-3">
        <div class="row g-2">
            <div class="col-md-3">
                <input type="date" id="filterDate" class="form-control" placeholder="Search by Date" />
            </div>
            <div class="col-md-3">
                <input type="text" id="filterDosage" class="form-control" placeholder="Search by Dosage" />
            </div>
            <div class="col-md-3">
                <input type="text" id="filterDrug" class="form-control" placeholder="Search by Drug" />
            </div>
            <div class="col-md-3">
                <input type="text" id="filterPatient" class="form-control" placeholder="Search by Patient" />
            </div>
        </div>
        <div class="mt-2">
            <button id="btnSearch" class="btn btn-success" title="Search Result">Search</button>
            <button id="btnReset" class="btn btn-secondary" title="Reset Filter">Reset</button>
        </div>
    </div>

    <!-- Table -->
    <table class="table table-bordered table-striped text-center align-middle" id="patientTable">
        <thead>
            <tr>
                <th>Date</th>
                <th>Dosage</th>
                <th>Drug</th>
                <th>Patient</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody id="patientTableBody">
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ModifiedDate.ToString("MM/dd/yyyy")</td>
                    <td>@item.Dosage.ToString("0.00")</td>
                    <td>@item.Drug</td>
                    <td>@item.Patient</td>
                    <td>
                        <a href="@Url.Action("Edit", "Patient", new { ID = item.ID })" class="btn btn-sm btn-warning">Edit</a>
                        <button type="button" data-id="@item.ID" class="btn btn-sm btn-danger btn-delete">Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts{
    <script src="https://cdn.datatables.net/2.3.4/js/dataTables.min.js"></script>
    <script src="~/Scripts/PatientList.js"></script>
}

@model List<EL.PatientEntity>

@{
    ViewBag.Title = "Patient Details";
    Layout = "~/Views/Shared/MainLayout.cshtml";
}

<div class="container mt-4">
    <h2 class="mb-3">Patient Details</h2>

    <a href="@Url.Action("Create", "Patient")" class="btn btn-primary mb-3">Add New Record</a>

    <!-- Search Filters -->
    <div class="card mb-3 p-3">
        <div class="row g-2 mb-2">
            <div class="col-md-3">
                <input type="text" id="filterDate" class="form-control" placeholder="MM/DD/YYYY" />
            </div>
            <div class="col-md-3">
                <input type="text" id="filterDosage" class="form-control" placeholder="Dosage" />
            </div>
            <div class="col-md-3">
                <input type="text" id="filterDrug" class="form-control" placeholder="Drug" />
            </div>
            <div class="col-md-3">
                <input type="text" id="filterPatient" class="form-control" placeholder="Patient" />
            </div>
        </div>
        <div class="mt-2">
            <button id="btnReset" class="btn btn-secondary">Reset</button>
        </div>
    </div>

    <table class="table table-bordered table-striped text-center align-middle" id="patientTable">
        <thead>
            <tr>
                <th>Date</th>
                <th>Dosage</th>
                <th>Drug</th>
                <th>Patient</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody></tbody>
    </table>
</div>

@section Scripts{
    <script src="https://cdn.datatables.net/2.3.4/js/dataTables.min.js"></script>
    <script src="~/Content/JS/Shared/Utils.js"></script>
    <script src="~/Content/JS/PatientDelete.js"></script>

    <script>
        let allPatients = @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Model));
    </script>
    <script src="~/Content/JS/PatientList.js"></script>
}
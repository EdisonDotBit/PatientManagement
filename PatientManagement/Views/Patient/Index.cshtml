@model List<EL.PatientEntity>

@{
    ViewBag.Title = "Patient Details";
    Layout = "~/Views/Shared/MainLayout.cshtml";
}

<div class="container mt-4">
    <h2 class="mb-3">Patient Details</h2>

    <div class="mb-3">
        <a href="@Url.Action("Create", "Patient")" class="btn btn-primary">
            Create New Records
        </a>
    </div>

    <table class="table table-hover align-middle" id="patientTable">
        <thead>
            <!-- Search row -->
            <tr>
                <th class="text-center">Search By</th>
                <th><input type="date" id="txtDate" class="form-control form-control-sm" placeholder="Date" /></th>
                <th><input type="text" id="txtDosage" class="form-control form-control-sm" placeholder="Dosage" /></th>
                <th><input type="text" id="txtDrug" class="form-control form-control-sm" placeholder="Drug" /></th>
                <th>
                    <div class="d-flex">
                        <input type="text" id="txtPatient" class="form-control form-control-sm me-2" placeholder="Patient" />
                        <div class="btn-container">
                            <button id="btnReset" class="btn btn-sm btn-secondary w-100">Reset</button>
                        </div>
                    </div>
                </th>
            </tr>

            <!-- Header row -->
            <tr>
                <th class="text-center"></th>
                <th>Date</th>
                <th>Dosage</th>
                <th>Drug</th>
                <th>Patient</th>
            </tr>
        </thead>
        <tbody></tbody>
    </table>
</div>

@section Scripts {
    <script src="~/Content/JS/Shared/Utils.js"></script>
    <script>
        let allPatients = @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Model));
    </script>
    <script src="~/Content/JS/PatientList.js"></script>
    <script src="~/Content/JS/PatientSearch.js"></script>
    <script src="~/Content/JS/PatientDelete.js"></script>
}
@model List<EL.PatientEntity>

@{
    ViewBag.Title = "Patient Details";
    Layout = "~/Views/Shared/MainLayout.cshtml";
}

<div class="container mt-4">
    <h2 class="mb-3">Patient Details</h2>

    <!-- Create button -->
    <a href="@Url.Action("Create", "Patient")" class="btn btn-primary mb-3">Create New Record</a>

    <!-- Search Form -->
    @using (Html.BeginForm("Index", "Patient", FormMethod.Get))
    {
        <div class="row mb-3">
            <div class="col">
                <input type="text" name="searchDate" class="form-control form-control-sm" placeholder="Search Date" value="@Request.QueryString["searchDate"]" />
            </div>
            <div class="col">
                <input type="text" name="searchDosage" class="form-control form-control-sm" placeholder="Search Dosage" value="@Request.QueryString["searchDosage"]" />
            </div>
            <div class="col">
                <input type="text" name="searchDrug" class="form-control form-control-sm" placeholder="Search Drug" value="@Request.QueryString["searchDrug"]" />
            </div>
            <div class="col">
                <input type="text" name="searchPatient" class="form-control form-control-sm" placeholder="Search Patient" value="@Request.QueryString["searchPatient"]" />
            </div>
            <div class="col">
                <button type="submit" class="btn btn-primary btn-sm">Search</button>
                <a href="@Url.Action("Index", "Patient")" class="btn btn-secondary btn-sm">Reset</a>
            </div>
        </div>
    }

    <!-- Table -->
    <table class="table table-bordered table-striped text-center" id="patientTable">
        <thead>
            <tr>
                <th>Date</th>
                <th>Dosage</th>
                <th>Drug</th>
                <th>Patient</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ModifiedDate.ToString("MM/dd/yyyy")</td>
                    <td>@item.Dosage</td>
                    <td>@item.Drug</td>
                    <td>@item.Patient</td>
                    <td>
                        <a href="@Url.Action("Edit", "Patient", new { id = item.ID })" class="btn btn-sm btn-warning">Edit</a>
                        <a href="@Url.Action("Delete", "Patient", new { id = item.ID })" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/MainLayout.cshtml";
}

@{
    ViewBag.Title = "Home";
    Layout = "~/Views/Shared/MainLayout.cshtml";
}

<div class="container text-center py-5">

    <!-- Welcome Header -->
    <div class="mb-5">
        <h1 class="display-4 fw-bold text-primary">Welcome to Patient Management System</h1>
        <p class="lead text-muted">A simple ASP.NET MVC application with N-Layer Architecture</p>
    </div>

    <!-- Feature Cards -->
    <div class="row justify-content-center g-4">

        <div class="col-md-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title text-success">📊 Records Overview</h5>
                    <p class="card-text">Quickly check daily dosage records and track medication history.</p>
                    <a href="@Url.Action("Index", "Patient")" class="btn btn-outline-success">View Records</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title text-danger">⚙️ System Info</h5>
                    <p class="card-text">Built with ASP.NET MVC, SQL Server, Bootstrap, and N-Layer architecture.</p>
                    <a href="@Url.Action("About", "Home")" class="btn btn-outline-danger">Learn More</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title text-dark">🌐 GitHub Repository</h5>
                    <p class="card-text">Explore the full project source code, contribute, or report issues on GitHub.</p>
                    <a href="https://github.com/EdisonDotBit/PatientManagement" target="_blank" class="btn btn-outline-dark">
                        Visit GitHub
                    </a>
                </div>
            </div>
        </div>

    </div>

</div>

@{
    ViewBag.Title = "About";
    Layout = "~/Views/Shared/MainLayout.cshtml";
}

<div class="container py-5">
    <!-- Page Header -->
    <div class="text-center mb-5">
        <h1 class="display-5 fw-bold text-primary">About This Project</h1>
        <p class="lead text-muted">Learn more about the Patient Management System</p>
    </div>

    <!-- Project Overview -->
    <div class="row g-4 mb-5">
        <div class="col-md-6">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <h5 class="card-title text-success">🎯 Purpose</h5>
                    <p class="card-text">
                        The Patient Management System is designed to help healthcare providers track
                        medication records and daily dosage history in an organized and efficient way.
                    </p>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <h5 class="card-title text-info">🛠️ Technology Stack</h5>
                    <ul class="list-unstyled">
                        <li><strong>Frontend:</strong> Bootstrap, jQuery, SweetAlert2</li>
                        <li><strong>Backend:</strong> ASP.NET MVC (C#)</li>
                        <li><strong>Database:</strong> SQL Server</li>
                        <li><strong>Architecture:</strong> N-Layer Architecture</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <!-- Additional Info -->
    <div class="row g-4 mb-5">
        <div class="col-md-4">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <h5 class="card-title text-primary">✨ Features</h5>
                    <ul class="list-unstyled">
                        <li>✔️ Create and manage patient records</li>
                        <li>✔️ Track dosage and medication history</li>
                        <li>✔️ Validation and user-friendly forms</li>
                        <li>✔️ Responsive UI with Bootstrap</li>
                    </ul>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <h5 class="card-title text-warning">🚀 Future Improvements</h5>
                    <ul class="list-unstyled">
                        <li>🔹 Role-based authentication & authorization</li>
                        <li>🔹 Advanced search and filtering</li>
                        <li>🔹 Export reports (PDF/Excel)</li>
                        <li>🔹 Integration with hospital systems</li>
                    </ul>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <h5 class="card-title text-secondary">📚 Credits</h5>
                    <p class="card-text">
                        This project makes use of several open-source libraries and frameworks:
                    </p>
                    <ul class="list-unstyled">
                        <li>🔹 <strong>Bootstrap</strong> – responsive UI</li>
                        <li>🔹 <strong>jQuery</strong> – form validation & events</li>
                        <li>🔹 <strong>SweetAlert2</strong> – alerts & confirmations</li>
                        <li>🔹 <strong>DataTables</strong> – tabular records</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <!-- Developer Info -->
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <h5 class="card-title text-dark">👨‍💻 Developer</h5>
                    <p class="card-text">
                        This project was developed as part of a learning journey in ASP.NET MVC and
                        software architecture. Contributions and feedback are welcome!
                    </p>
                    <a href="https://github.com/EdisonDotBit/PatientManagement" target="_blank" class="btn btn-outline-dark">
                        <i class="bi bi-github"></i> View on GitHub
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
